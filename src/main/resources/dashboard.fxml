<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.scheduler.ui.DashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: #1f1f1f; -fx-padding: 15;">
         <children>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Scheduler" />
            <Button onAction="#importFaculty" text="Import Faculty" />
            <Button onAction="#importSubjects" text="Import Subjects" />
            <Button onAction="#importSections" text="Import Sections" />
            <Button fx:id="btnGenerate" onAction="#generateTimetable" style="-fx-background-color: #00c853;" text="GENERATE" />
            <Button fx:id="btnExportExcel" disable="true" onAction="#exportExcel" text="Export Excel" />
            <Button fx:id="btnExportPdf" disable="true" onAction="#exportPdf" text="Export PDF" />
         </children>
      </HBox>
   </top>
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
        <tabs>
          <Tab text="Timetable">
               <content>
                  <VBox spacing="10.0" style="-fx-padding: 10;">
                     <children>
                        <!-- Navigation Toolbar -->
                        <HBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #252525; -fx-padding: 10; -fx-background-radius: 5;">
                           <children>
                              <Button fx:id="btnPrevSection" text="&lt; Previous" onAction="#showPreviousSection" />
                              <Label text="Section:" style="-fx-text-fill: white; -fx-font-weight: bold;" />
                              <ComboBox fx:id="sectionSelector" prefWidth="200.0" />
                              <Button fx:id="btnNextSection" text="Next &gt;" onAction="#showNextSection" />
                           </children>
                        </HBox>

                        <!-- Single Timetable View -->
                        <VBox fx:id="timetableContainer" spacing="20.0" VBox.vgrow="ALWAYS" style="-fx-padding: 10;">
                           <children>
                              <Label text="Load data and click Generate to see the timetable." style="-fx-text-fill: gray;" />
                           </children>
                        </VBox>
                     </children>
                  </VBox>
               </content>
          </Tab>
          <Tab text="Faculty Workload">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <VBox fx:id="workloadContainer" spacing="10.0" style="-fx-padding: 20;" />
                     </content>
                  </ScrollPane>
               </content>
          </Tab>
        </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox spacing="10" style="-fx-padding: 5; -fx-background-color: #121212;">
          <Label fx:id="statusLabel" text="Ready" />
      </HBox>
   </bottom>
</BorderPane>
